<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="display-4">
        <i class="bi bi-currency-bitcoin text-warning"></i>
        Top 50 Kryptowährungen
        <small class="text-muted fs-6">USDC-Paare • 1h RSI</small>
      </h1>
      
      <div class="text-end">
        <% if @last_update %>
          <div class="mb-2">
            <small class="text-muted">
              <i class="bi bi-clock"></i> Letzte Aktualisierung: 
              <strong><%= @last_update.strftime("%d.%m.%Y %H:%M:%S") %></strong>
            </small>
          </div>
          <div class="mb-2">
            <small class="text-success">
              <i class="bi bi-check-circle"></i> Live-Daten von Binance API
            </small>
          </div>
        <% else %>
          <div class="mb-2">
            <small class="text-warning">
              <i class="bi bi-exclamation-triangle"></i> Keine aktuellen Daten verfügbar
            </small>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @cryptocurrencies.any? %>
  <!-- Desktop Table View -->
  <div class="d-none d-lg-block">
    <div class="table-responsive">
      <table id="crypto-table" class="table table-hover">
        <thead class="table-dark">
          <tr>
            <th>Rang</th>
            <th>Name</th>
            <th>Symbol</th>
            <th>Preis</th>
            <th>24h Änderung</th>
            <th>Market Cap</th>
            <th>Volumen 24h (USD)</th>
            <th>RSI (1h)</th>
          </tr>
        </thead>
        <tbody>
          <% @cryptocurrencies.each do |crypto| %>
            <tr>
              <td><span class="badge bg-secondary">#<%= crypto.market_cap_rank %></span></td>
              <td>
                <strong><%= crypto.name %></strong>
              </td>
              <td>
                <span class="badge bg-light text-dark"><%= crypto.base_symbol %></span>
              </td>
              <td data-sort="<%= crypto.current_price || 0 %>">
                <strong>
                  <%= link_to crypto.formatted_current_price, 
                      chart_cryptocurrency_path(crypto), 
                      target: '_blank',
                      class: 'text-decoration-none text-primary chart-link',
                      title: 'Chart anzeigen' %>
                </strong>
              </td>
              <td>
                <span class="<%= crypto.price_change_color_class %>">
                  <% if crypto.price_change_percentage_24h && crypto.price_change_percentage_24h >= 0 %>
                    <i class="bi bi-arrow-up"></i>
                  <% elsif crypto.price_change_percentage_24h %>
                    <i class="bi bi-arrow-down"></i>
                  <% end %>
                  <%= crypto.price_change_percentage_24h_formatted %>
                </span>
              </td>
              <td><%= crypto.formatted_market_cap %></td>
              <td>
                <%= crypto.formatted_volume_24h %>
              </td>
              <td data-sort="<%= crypto.rsi || -1 %>">
                <% if crypto.rsi %>
                  <% rsi_class = if crypto.rsi <= 30
                                   "rsi-oversold"
                                 elsif crypto.rsi >= 70
                                   "rsi-overbought"
                                 else
                                   "rsi-neutral"
                                 end %>
                  <%= link_to chart_cryptocurrency_path(crypto), 
                      target: '_blank',
                      class: 'text-decoration-none',
                      title: 'Chart anzeigen' do %>
                    <span class="badge <%= rsi_class %> chart-link">
                      <%= crypto.rsi %>
                    </span>
                  <% end %>
                <% else %>
                  <span class="badge bg-secondary">N/A</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Mobile Card View -->
  <div class="d-lg-none">
    <div class="row">
      <% @cryptocurrencies.each do |crypto| %>
        <div class="col-12 mb-3">
          <div class="card crypto-card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                  <h5 class="card-title mb-1">
                    <span class="badge bg-secondary me-2">#<%= crypto.market_cap_rank %></span>
                    <%= crypto.name %>
                  </h5>
                  <span class="badge bg-light text-dark"><%= crypto.base_symbol %></span>
                </div>
                <div class="text-end">
                  <strong class="h5">
                    <%= link_to crypto.formatted_current_price, 
                        chart_cryptocurrency_path(crypto), 
                        target: '_blank',
                        class: 'text-decoration-none text-primary chart-link',
                        title: 'Chart anzeigen' %>
                  </strong>
                </div>
              </div>
              
              <div class="row">
                <div class="col-6">
                  <small class="text-muted">24h Änderung</small><br>
                  <span class="<%= crypto.price_change_color_class %>">
                    <% if crypto.price_change_percentage_24h && crypto.price_change_percentage_24h >= 0 %>
                      <i class="bi bi-arrow-up"></i>
                    <% elsif crypto.price_change_percentage_24h %>
                      <i class="bi bi-arrow-down"></i>
                    <% end %>
                    <%= crypto.price_change_percentage_24h_formatted %>
                  </span>
                </div>
                <div class="col-6">
                  <small class="text-muted">RSI (1h)</small><br>
                  <% if crypto.rsi %>
                    <% rsi_class = if crypto.rsi <= 30
                                     "rsi-oversold"
                                   elsif crypto.rsi >= 70
                                     "rsi-overbought"
                                   else
                                     "rsi-neutral"
                                   end %>
                    <%= link_to chart_cryptocurrency_path(crypto), 
                        target: '_blank',
                        class: 'text-decoration-none',
                        title: 'Chart anzeigen' do %>
                      <span class="badge <%= rsi_class %> chart-link">
                        <%= crypto.rsi %>
                      </span>
                    <% end %>
                  <% else %>
                    <span class="badge bg-secondary">N/A</span>
                  <% end %>
                </div>
              </div>
              
              <div class="row mt-2">
                <div class="col-6">
                  <small class="text-muted">Market Cap</small><br>
                  <strong><%= crypto.formatted_market_cap %></strong>
                </div>
                <div class="col-6">
                  <small class="text-muted">Volumen 24h</small><br>
                  <strong><%= crypto.formatted_volume_24h %></strong>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- RSI Legend -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">RSI Legende (1h Timeframe)</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <span class="badge rsi-oversold me-2">≤ 30</span>
              <strong>Überverkauft</strong> - Potentieller Kaufsignal
            </div>
            <div class="col-md-4">
              <span class="badge rsi-neutral me-2">31-69</span>
              <strong>Neutral</strong> - Normale Marktbedingungen
            </div>
            <div class="col-md-4">
              <span class="badge rsi-overbought me-2">≥ 70</span>
              <strong>Überkauft</strong> - Potentieller Verkaufssignal
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <!-- Empty State -->
  <div class="text-center py-5">
    <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
    <h3 class="mt-3">Keine Daten verfügbar</h3>
    <p class="text-muted">
      Es konnten keine Kryptowährungsdaten geladen werden. 
      Bitte überprüfen Sie Ihre Internetverbindung und versuchen Sie es erneut.
    </p>
    <%= link_to refresh_data_cryptocurrencies_path, method: :post, 
        class: "btn btn-primary btn-lg" do %>
      <i class="bi bi-arrow-clockwise"></i> Daten laden
    <% end %>
  </div>
<% end %> 