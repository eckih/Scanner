<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1><i class="bi bi-database"></i> Datenbank-Verwaltung</h1>
      
      <!-- SQL-Executor -->
      <div class="card mb-4">
        <div class="card-header">
          <h5><i class="bi bi-terminal"></i> SQL-Abfrage ausführen</h5>
        </div>
        <div class="card-body">
          <%= form_with url: execute_database_path, method: :post, local: true do |form| %>
            <div class="mb-3">
              <%= form.text_area :sql, value: @sql, class: "form-control", rows: 3, placeholder: "SELECT * FROM cryptocurrencies LIMIT 10;" %>
            </div>
            <%= form.submit "Abfrage ausführen", class: "btn btn-primary" %>
          <% end %>
          
          <% if @success == false && @error %>
            <div class="alert alert-danger mt-3">
              <strong>Fehler:</strong> <%= @error %>
            </div>
          <% end %>
          
          <% if @success && @result %>
            <div class="mt-3">
              <h6>Ergebnis:</h6>
              <div class="table-responsive">
                <table class="table table-sm table-striped">
                  <% if @result.any? %>
                    <thead>
                      <tr>
                        <% @result.first.keys.each do |key| %>
                          <th><%= key %></th>
                        <% end %>
                      </tr>
                    </thead>
                    <tbody>
                      <% @result.each do |row| %>
                        <tr>
                          <% row.values.each do |value| %>
                            <td><%= value %></td>
                          <% end %>
                        </tr>
                      <% end %>
                    </tbody>
                  <% else %>
                    <tr><td colspan="100%" class="text-center">Keine Ergebnisse</td></tr>
                  <% end %>
                </table>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Tabellen-Übersicht -->
      <div class="card">
        <div class="card-header">
          <h5><i class="bi bi-table"></i> Datenbank-Tabellen</h5>
        </div>
        <div class="card-body">
          <% @tables.each do |table| %>
            <div class="card mb-3">
              <div class="card-header">
                <h6 class="mb-0">
                  <i class="bi bi-table"></i> <%= table %>
                  <span class="badge bg-secondary"><%= @table_data[table].size %> Zeilen</span>
                </h6>
              </div>
              <div class="card-body">
                <% if @table_data[table].any? %>
                  <div class="table-responsive">
                    <table class="table table-sm table-striped">
                      <thead>
                        <tr>
                          <% @table_data[table].first.keys.each do |key| %>
                            <th><%= key %></th>
                          <% end %>
                        </tr>
                      </thead>
                      <tbody>
                        <% @table_data[table].each do |row| %>
                          <tr>
                            <% row.values.each do |value| %>
                              <td><%= value %></td>
                            <% end %>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% else %>
                  <p class="text-muted">Keine Daten verfügbar</p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 