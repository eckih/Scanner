    <!-- ActionCable √ºber mehrere CDN-Quellen laden -->
    <script>
    console.log("üîß Versuche ActionCable zu laden...");
    
    // Funktion zum Laden von ActionCable
    function loadActionCable() {
      return new Promise((resolve, reject) => {
        // Versuche zuerst die offizielle CDN-Version
        const script1 = document.createElement('script');
        script1.src = 'https://cdn.jsdelivr.net/npm/@rails/actioncable@7.1.4/app/assets/javascripts/actioncable.js';
        script1.onload = () => {
          console.log("‚úÖ ActionCable von jsdelivr geladen");
          resolve();
        };
        script1.onerror = () => {
          console.log("‚ùå jsdelivr fehlgeschlagen, versuche unpkg...");
          
          // Fallback zu unpkg
          const script2 = document.createElement('script');
          script2.src = 'https://unpkg.com/@rails/actioncable@7.1.4/app/assets/javascripts/actioncable.js';
          script2.onload = () => {
            console.log("‚úÖ ActionCable von unpkg geladen");
            resolve();
          };
          script2.onerror = () => {
            console.log("‚ùå unpkg fehlgeschlagen, erstelle lokale ActionCable...");
            
            // Lokale ActionCable-Implementation als letzter Fallback
            window.ActionCable = {
              createConsumer: function(url) {
                console.log("üîß Erstelle lokalen ActionCable Consumer f√ºr:", url);
                
                return {
                  subscriptions: {
                    create: function(channel, callbacks) {
                      console.log("üîß Erstelle lokale Subscription f√ºr:", channel);
                      
                      const ws = new WebSocket(url);
                      
                      ws.onopen = function() {
                        console.log("üéâ WebSocket Verbindung hergestellt");
                        
                        // Sende Subscription-Request
                        ws.send(JSON.stringify({
                          command: "subscribe",
                          identifier: JSON.stringify({channel: channel})
                        }));
                        
                        if (callbacks.connected) callbacks.connected();
                      };
                      
                      ws.onmessage = function(event) {
                        console.log("üì® WebSocket Nachricht:", event.data);
                        try {
                          const data = JSON.parse(event.data);
                          
                          // Ignoriere Ping-Nachrichten
                          if (data.type === 'ping') {
                            console.log("üèì Ping-Nachricht ignoriert (lokale Implementation)");
                            return;
                          }
                          
                          if (data.message && callbacks.received) {
                            callbacks.received(data.message);
                          }
                        } catch (e) {
                          console.log("‚ùå Fehler beim Parsen der WebSocket-Nachricht:", e);
                        }
                      };
                      
                      ws.onclose = function() {
                        console.log("‚ùå WebSocket Verbindung geschlossen");
                        if (callbacks.disconnected) callbacks.disconnected();
                      };
                      
                      ws.onerror = function(error) {
                        console.log("‚ùå WebSocket Fehler:", error);
                        if (callbacks.rejected) callbacks.rejected();
                      };
                      
                      return {
                        unsubscribe: function() {
                          ws.close();
                        }
                      };
                    }
                  }
                };
              }
            };
            
            console.log("‚úÖ Lokale ActionCable-Implementation erstellt");
            resolve();
          };
          
          document.head.appendChild(script2);
        };
        
        document.head.appendChild(script1);
      });
    }
    
    // Lade ActionCable beim Seitenstart
    loadActionCable().then(() => {
      console.log("üéâ ActionCable erfolgreich geladen:", typeof window.ActionCable);
    });
    </script>
    
