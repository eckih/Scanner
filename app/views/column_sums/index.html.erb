<!DOCTYPE html>
<html>
<head>
  <title>Spalten-Summen Charts</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .chart-container {
      position: relative;
      height: 400px;
      margin: 20px 0;
    }
    .stats-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 15px;
      padding: 20px;
      margin: 10px 0;
    }
    .time-selector {
      background: #f8f9fa;
      border-radius: 10px;
      padding: 15px;
      margin: 15px 0;
    }
    .sum-value {
      font-size: 2rem;
      font-weight: bold;
    }
    .sum-label {
      font-size: 0.9rem;
      opacity: 0.8;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <h1 class="mt-4 mb-4">
          <i class="bi bi-graph-up"></i>
          Spalten-Summen Charts
        </h1>
        
        <!-- Aktuelle Summen -->
        <div class="row mb-4">
          <div class="col-md-4">
            <div class="stats-card">
              <div class="sum-label">24h Summe</div>
              <div class="sum-value" id="current-sum-24h">
                <%= @latest_sums&.sum_24h&.round(2) || '0.00' %>
              </div>
              <small>Durchschnitt: <%= @average_24h %> (letzte 10)</small>
            </div>
          </div>
          <div class="col-md-4">
            <div class="stats-card">
              <div class="sum-label">1h Summe</div>
              <div class="sum-value" id="current-sum-1h">
                <%= @latest_sums&.sum_1h&.round(2) || '0.00' %>
              </div>
              <small>Durchschnitt: <%= @average_1h %> (letzte 10)</small>
            </div>
          </div>
          <div class="col-md-4">
            <div class="stats-card">
              <div class="sum-label">30min Summe</div>
              <div class="sum-value" id="current-sum-30min">
                <%= @latest_sums&.sum_30min&.round(2) || '0.00' %>
              </div>
              <small>Durchschnitt: <%= @average_30min %> (letzte 10)</small>
            </div>
          </div>
        </div>
        
        <!-- Zeitauswahl -->
        <div class="time-selector">
          <div class="row align-items-center">
            <div class="col-md-6">
              <label for="timeRange" class="form-label">Zeitraum:</label>
              <select id="timeRange" class="form-select">
                <option value="1">Letzte Stunde</option>
                <option value="6">Letzte 6 Stunden</option>
                <option value="12">Letzte 12 Stunden</option>
                <option value="24" selected>Letzte 24 Stunden</option>
                <option value="48">Letzte 48 Stunden</option>
                <option value="168">Letzte Woche</option>
              </select>
            </div>
            <div class="col-md-6 text-end">
              <button id="calculateNow" class="btn btn-primary">
                <i class="bi bi-calculator"></i>
                Jetzt berechnen
              </button>
              <button id="refreshData" class="btn btn-secondary">
                <i class="bi bi-arrow-clockwise"></i>
                Aktualisieren
              </button>
            </div>
          </div>
        </div>
        
        <!-- Chart -->
        <div class="chart-container">
          <canvas id="sumsChart"></canvas>
        </div>
        
        <!-- Legende -->
        <div class="row mt-3">
          <div class="col-12">
            <div class="d-flex justify-content-center">
              <div class="me-4">
                <span class="badge bg-primary">24h Summe</span>
              </div>
              <div class="me-4">
                <span class="badge bg-success">1h Summe</span>
              </div>
              <div class="me-4">
                <span class="badge bg-warning">30min Summe</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let sumsChart;
    
    // Chart initialisieren
    function initChart() {
      const ctx = document.getElementById('sumsChart').getContext('2d');
      
      sumsChart = new Chart(ctx, {
        type: 'line',
        data: {
          datasets: [
            {
              label: '24h Summe',
              data: [],
              borderColor: 'rgb(54, 162, 235)',
              backgroundColor: 'rgba(54, 162, 235, 0.1)',
              tension: 0.4,
              fill: false
            },
            {
              label: '1h Summe',
              data: [],
              borderColor: 'rgb(75, 192, 192)',
              backgroundColor: 'rgba(75, 192, 192, 0.1)',
              tension: 0.4,
              fill: false
            },
            {
              label: '30min Summe',
              data: [],
              borderColor: 'rgb(255, 205, 86)',
              backgroundColor: 'rgba(255, 205, 86, 0.1)',
              tension: 0.4,
              fill: false
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          interaction: {
            intersect: false,
            mode: 'index'
          },
          scales: {
            x: {
              type: 'time',
              time: {
                unit: 'hour',
                displayFormats: {
                  hour: 'HH:mm'
                }
              },
              title: {
                display: true,
                text: 'Zeit'
              }
            },
            y: {
              title: {
                display: true,
                text: 'Summe (%)'
              }
            }
          },
          plugins: {
            legend: {
              display: true,
              position: 'top'
            },
            tooltip: {
              callbacks: {
                title: function(context) {
                  return new Date(context[0].parsed.x).toLocaleString('de-DE');
                }
              }
            }
          }
        }
      });
    }
    
    // Daten laden
    function loadChartData(hours = 24) {
      fetch(`/column_sums/chart_data?hours=${hours}`)
        .then(response => response.json())
        .then(data => {
          updateChart(data.chart_data);
          updateCurrentSums(data.latest);
        })
        .catch(error => {
          console.error('Fehler beim Laden der Chart-Daten:', error);
        });
    }
    
    // Chart aktualisieren
    function updateChart(chartData) {
      const datasets = [
        chartData.map(point => ({ x: point.x, y: point.y_24h })),
        chartData.map(point => ({ x: point.x, y: point.y_1h })),
        chartData.map(point => ({ x: point.x, y: point.y_30min }))
      ];
      
      sumsChart.data.datasets.forEach((dataset, index) => {
        dataset.data = datasets[index];
      });
      
      sumsChart.update();
    }
    
    // Aktuelle Summen aktualisieren
    function updateCurrentSums(latest) {
      if (latest) {
        document.getElementById('current-sum-24h').textContent = parseFloat(latest.sum_24h).toFixed(2);
        document.getElementById('current-sum-1h').textContent = parseFloat(latest.sum_1h).toFixed(2);
        document.getElementById('current-sum-30min').textContent = parseFloat(latest.sum_30min).toFixed(2);
      }
    }
    
    // Event Listeners
    document.addEventListener('DOMContentLoaded', function() {
      initChart();
      loadChartData(24);
      
      // Zeitauswahl
      document.getElementById('timeRange').addEventListener('change', function() {
        loadChartData(parseInt(this.value));
      });
      
      // Jetzt berechnen Button
      document.getElementById('calculateNow').addEventListener('click', function() {
        this.disabled = true;
        this.innerHTML = '<i class="bi bi-hourglass-split"></i> Berechne...';
        
        fetch('/column_sums/calculate_now', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.getAttribute('content')
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.status === 'success') {
            loadChartData(parseInt(document.getElementById('timeRange').value));
          }
        })
        .catch(error => {
          console.error('Fehler beim Berechnen:', error);
        })
        .finally(() => {
          this.disabled = false;
          this.innerHTML = '<i class="bi bi-calculator"></i> Jetzt berechnen';
        });
      });
      
      // Aktualisieren Button
      document.getElementById('refreshData').addEventListener('click', function() {
        loadChartData(parseInt(document.getElementById('timeRange').value));
      });
    });
    
    // Auto-Refresh alle 30 Sekunden
    setInterval(() => {
      loadChartData(parseInt(document.getElementById('timeRange').value));
    }, 30000);
  </script>
</body>
</html>
