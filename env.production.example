# Produktions-Umgebungsvariablen
# Kopieren Sie diese Datei zu .env.production und füllen Sie Ihre tatsächlichen Werte ein

# Rails Konfiguration
RAILS_ENV=production
SECRET_KEY_BASE=ihr_secret_key_base_hier_generieren_mit_rails_secret
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Datenbank-Konfiguration
DATABASE_URL=sqlite3:db/production.sqlite3

# Redis-Konfiguration (für Caching und Hintergrund-Jobs)
REDIS_URL=redis://localhost:6379/0

# Puma Web Server Konfiguration
PORT=3000
RAILS_MAX_THREADS=5
RAILS_MIN_THREADS=5
WEB_CONCURRENCY=2
PUMA_WORKER_MAX_MEMORY=512

# Binance API Konfiguration
BINANCE_API_KEY=ihr_binance_api_key_hier
BINANCE_API_SECRET=ihr_binance_api_secret_hier
BINANCE_API_RATE_LIMIT=1200
BINANCE_API_TIMEOUT=30

# Sicherheits-Konfiguration
FORCE_SSL=false
SESSION_SECURE=true

# Überwachung und Logging
LOG_LEVEL=info
HEALTH_CHECK_TOKEN=ihr_health_check_token_hier

# Hintergrund-Jobs
SIDEKIQ_CONCURRENCY=5
SIDEKIQ_TIMEOUT=25

# Anwendungsspezifisch
APP_HOST=ihre-domain.com
APP_PROTOCOL=https

# Optional: E-Mail-Konfiguration (falls benötigt)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=ihre_email@gmail.com
# SMTP_PASSWORD=ihr_app_passwort
# SMTP_DOMAIN=ihre-domain.com

# Optional: Fehler-Tracking (Sentry, Bugsnag, etc.)
# SENTRY_DSN=ihr_sentry_dsn_hier

# Optional: Performance-Überwachung
# NEW_RELIC_LICENSE_KEY=ihr_new_relic_key_hier
# NEW_RELIC_APP_NAME=cryptocurrency-scanner-production 